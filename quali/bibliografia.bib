doi="10.1529/biophysj.106.089243",
url="http://www.ncbi.nlm.nih.gov/pubmed/16980371"
}

@Article{Manikandan2004,
author="Manikandan, K.
and Ramakumar, S.",
title="The occurrence of C--H...O hydrogen bonds in alpha-helices and helix termini in globular proteins.",
journal="Proteins",
