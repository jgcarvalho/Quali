url="http://dx.doi.org/10.1073/pnas.1113649108"
}

@Article{Chellapa2012,
author="Chellapa, D. George
and Rose, D. George",
title="Reducing the dimensionality of the protein-folding search problem.",
journal="Protein science: a publication of the Protein Society",
year="2012",
month="Aug",
